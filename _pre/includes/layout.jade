include ./mixins.jade

- var companyName = 'SARA'
- var indexDir = '/'
- var imagesDir = indexDir + "sources/images/"
- var cssDir = indexDir + "sources/css/"
- var jsDir = indexDir + "sources/js/"
- var iubenaID = 7827876

block vars

mixin nav
    ul
        li.first
            a(href='#{indexDir}', title="Home page") Home
        li
            a(href='#{indexDir}about-us.html', title="About Us page") About Us
        li
            a(href='#{indexDir}our-shop.html', title="Our Shop page") Our Shop
        li
            a(href='#{indexDir}donate.html', title="Donate page") Donate
        li
            a(href='#{indexDir}house-clearances.html', title="House Clearances page") House Clearances

doctype html

html(lang='en-GB')

    head

        meta(charset='utf-8')
        block pageMeta
            +title('Page Title')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name='mobile-web-app-capable', content='yes')
        //-
            meta(name="apple-mobile-web-app-status-bar-style", content="black")
            meta(http-equiv="cleartype", content="on")
            meta(property="og:title", content="My Site")
            meta(property="og:type", content="website")
            meta(property="og:image", content="assests/icon_big.png")
            meta(property="og:url", content="http://url.com")
            meta(property="og:site_name", content="My Site")
            meta(property="og:description", content="My Site is cool")
            meta(name="twitter:card", content="summary")
            meta(name="twitter:site", content="@flickr")
            meta(name="twitter:title", content="SARA UK In England Website")
            meta(name="twitter:description", content="View the album on Flickr.")
            meta(name="twitter:image", content="https://farm6.staticflickr.com/5510/14338202952_93595258ff_z.jpg")
        <!--[if lte IE 9]><meta http-equiv="refresh" content="0;url=/error/upgradebrowser/"><![endif]-->
        link(rel='icon', href='#{imagesDir}sara-uk-in-england-favicon.ico')
        link(rel="shortcut", href="#{imagesDir}#{imagesDir}sara-uk-england-icon-57x57.png")
        link(rel="apple-touch-icon-precomposed", sizes="114x114", href="#{imagesDir}sara-uk-england-icon-114x114.png")
        link(rel="apple-touch-icon-precomposed", sizes="72x72", href="#{imagesDir}sara-uk-england-icon-72x72.png")
        link(rel="apple-touch-icon-precomposed", href="#{imagesDir}sara-uk-england-icon-57x57.png")
        link(rel='stylesheet', href='#{cssDir}styles.min.css')

        if accordions
            link(rel='stylesheet' href='#{cssDir}plugins/accordions.min.css')

        if lightbox
            link(rel='stylesheet' href='#{cssDir}plugins/lightbox.min.css')

        if socialIcons
            link(rel='stylesheet', href='#{cssDir}plugins/social-icons.min.css')

    body(id=bodyId, class="horizontal fixed")

        #detectDevice(hidden)

        #cookieNotice

        #hamburgerNavDimmer
        #hamburgerNav
            nav
                +nav

        #body

            #pageHeader.row
            
                block pageHeader

                    header.contain

                        #logo.column.margin-0.s-span-6.m-span-4.l-span-3.xl-span-3
                            .content
                                a(href="#{indexDir}", title="Home page")
                                    img(src="#{imagesDir}sara-uk-england-logo.png", width="300", alt="SARA UK in England Logo")

                        .column.margin-0.s-span-6.m-span-8.l-span-9.xl-span-9
                            .content
                                #contact
                                    #hamburger.icon.s-show.m-show.l-hide.xl-hide
                                    a#tel.icon.s-show.m-hide.l-hide.xl-hide(href="tel:+447882437140", onclick="ga('send', 'event', 'Click', Contact', 'Telephone', 'Header Icon');", title="Call 07882437140")
                                    span.s-hide.m-show.l-show.xl-show Call #[a(href="tel:+447882437140", onclick="ga('send', 'event', 'Click', 'Contact', 'Telephone', 'Header Text');", title="Call 07882437140") 07882437140]
                                #mainNav.s-hide.m-hide.l-show.xl-show
                                    .nav
                                        +nav

            #page

                main

                    block pageContent

            #pageFooter.row

                block pageFooter

                    footer.contain
                        
                        #company.column.m-span-6.l-span-6.xl-span-9
                            .content
                                span.p.
                                    Strathaven Asthmatic Relief Action (SARA) Limited No. 08420510 is a trading arm of the SARA#[span.uk UK] charity in England No. 1159285. #[br]Registered Office: 5 Seaford Gardens, Woodley, Reading, Berkshire RG5 3LN #[br]VAT No: 231643531
                        #newsletter.column.m-span-6.l-span-6.xl-span-3
                            .content
                                span.heading Sign up to our newsletters:
                                form(action="http://email-campaigns.joontide.com/t/i/s/kugir/", method="post", id="subForm")
                                    input#fieldName(name="cm-name", type="text", placeholder="Name")
                                    input#fieldEmail(name="cm-kugir-kugir", type="email", placeholder="Email" required)
                                    button(type="submit") Subscribe

                        #copyright.column.m-span-6.l-span-6.xl-span-6
                            .content
                                p &copy; Copyright 2016. All Rights Reserved.

                        #terms.column.m-span-6.l-span-6.xl-span-6
                            .content
                                ul.inline-list
                                    li.first #[a(href="//www.iubenda.com/privacy-policy/#{iubenaID}", class="iubenda-nostyle no-brand iubenda-embed", onclick="ga('send', 'event', 'Click', 'Legal', 'Privacy Policy');", title="Privacy Policy") Privacy Policy]
                                    li #[a(href="//www.iubenda.com/privacy-policy/7827876/cookie-policy", class="iubenda-nostyle no-brand iubenda-embed", onclick="ga('send', 'event', 'Click', 'Legal', 'Cookie Policy');", title="Cookie Policy") Cookie Policy]

        if lightbox
            #lightBox
                #lightBoxBgClick
                img#lightBoxImg
                #lightBoxCloseBtn
                #lightBoxPrevBtn
                #lightBoxNextBtn

            #lightBoxDimmer

        +ga('UA-75990628-1')

        script.
            var ppid = #{iubenaID}; (function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "//cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);

        //-script(src='#{jsDir}jquery-2.1.3.min.js')
        //-script(src='#{jsDir}jquery.mobile-1.4.5.min.js')
        script(async, src='#{jsDir}core.min.js')

        if accordions
            script(src='#{jsDir}plugins/accordions.min.js')

        if counter
            script(src='#{jsDir}plugins/counter.min.js')

        if lightbox
            script(src='#{jsDir}plugins/lightbox.min.js')

        if scrollTos
            script(src='#{jsDir}plugins/scroll-to.min.js')

        if scrollActions
            script(src='#{jsDir}plugins/scroll-actions.min.js')